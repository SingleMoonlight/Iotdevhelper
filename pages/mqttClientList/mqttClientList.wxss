.clients {
  width: 100%;
  display: flex;
  flex-direction: row;
  flex-wrap: wrap;
}

.client {
  width: 100%;
  height: 60px;
  margin-top: 10px;
  margin-left: 10px;
  margin-right: 10px;
  color: #000000;
  background-color: #40a0ff6e;
  border-radius: 10px;
  box-shadow: 0px 2px 5px #b9b9b9;
}

.clientName {
  position: absolute;
  left: 0;
  top: 0;
  right: 0;
  bottom: 0;
  margin: auto;
  font-size: 20px;
  display: flex;
  align-items: center;
  justify-content: center;
}