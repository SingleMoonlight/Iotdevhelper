.btns {
  width: 100%;
  display: flex;
  flex-direction: row;
  flex-wrap: wrap;
}

.btn {
  width: 150px;
  height: 100px;
  padding: 0;
  margin-top: 10px;
  margin-left: 15px;
  margin-right: 15px;
  color: #ffffff;
  border-radius: 20px;
  box-shadow: 0px 2px 5px #b9b9b9;
}

.btnImg {
  width: 100%;
  height: 100%;
  border-radius: 20px;
}

.btnText {
  position: absolute;
  left: 0;
  top: 0;
  right: 0;
  bottom: 0;
  margin: auto;
  font-size: 20px;
  font-weight: bold;
  display: flex;
  align-items: center;
  justify-content: center;
}

.btn::after {
  border-radius: 20px;
  border: 0; 
}

.btn-hover {
  position: relative;
  top: 3rpx;
  left: 3rpx;
  box-shadow:0px 0px 8px rgba(0, 0, 0, .1) inset;
}